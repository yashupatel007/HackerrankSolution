int pairs(int k, vector<int> arr) {
  sort(arr.begin(), arr.end());
    int count = 0;
    int i = 0, j = 1;
    int n = arr.size();
    while (j < n) {
        int diff = arr[j] - arr[i];
        if (diff == k) {
            count++;
            i++; j++;
        } else if (diff < k) {
            j++;
        } else {
            i++;
        }
    }
    return count;
}
