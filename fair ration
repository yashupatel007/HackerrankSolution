string fairRations(vector<int> B) {
     int n = B.size();
    int loaves = 0;

    for (int i = 0; i + 1 < n; ++i) {
        if (B[i] % 2 != 0) {
            // Give one loaf to person i and one to person i+1
            B[i]++;
            B[i + 1]++;
            loaves += 2;
        }
    }

    // If the last person is still odd, it's impossible
    if (B.back() % 2 != 0) {
        return "NO";
    }

    return to_string(loaves);


}
